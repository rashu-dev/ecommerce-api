
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role{
  Admin
  User
}

model User {
  id Int @id @default(autoincrement())
  name String 
  email String @unique
  password String
  role Role @default(User)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Product {
  id Int @id @default(autoincrement())
  title String
  description String
  price Decimal
  tag String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("products")
}